@model IEnumerable<ICT2106project.Models.Loan>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Borrower"))
{

<h2>Loans</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateOfLoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfReturn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loanQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loanStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfLoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfReturn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loanQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loanStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LoanID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LoanID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LoanID })
        </td>
    </tr>
}

</table>
}
else
{
<p><h2>Oops, please login as user before viewing this page.</h2></p>

}