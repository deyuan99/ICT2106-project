@model IEnumerable<ICT2106project.Models.Book>

@section AddToHead{
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>
}

@{
    ViewBag.Title = "Index";
}


<h2>Books</h2>
@if (User.IsInRole("Librarian"))
{
    <p>
        @Html.ActionLink("Create New Book", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookISBN10)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookISBN13)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookAvailability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateOfLoan)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookISBN10)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookISBN13)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookAvailability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfLoan)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.bookID }) |
                @Html.ActionLink("Details", "Details", new { id = item.bookID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.bookID })
            </td>
        </tr>
    }
    </table>
}
else
{
    <div class="row">
        <div class="col-md-1">
            <br/><br/><br/>
            <div class="left"><img src="~/Content/images/ArrowLeft.png" width='50px' height='50px' /></div>
        </div>
        <div class="col-md-10" id="scroller">
            <div class="wrapper">
                <div class="scrollContainer">
                    @foreach (var item in Model)
                    {
                        <div class="contentContainer">
                            <a href='@Url.Action("Details", new { id = item.bookID })'><img src="@item.bookImage" width='100%' height='100%'/></a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <br/><br/><br/>
            <div class="right"><img src="~/Content/images/ArrowRight.png" width='50px' height='50px' /></div>
        </div>
    </div>
    
}